@using System.Collections.Generic;

<div class="text-center">
    <h1 class="display-4">Search By...</h1>
    <form action="/search-by" method="post" >
      <label for="searchQuery">Please enter a word to search all records by:</label><br>
      <input type="text" name="searchQuery"><br><br>
      <button type="submit" class="btn btn-dark">Search!</button>
    </form>
    @if(Model.Count > 0)
    {
    <h1>Categories with '@Model["search-query"]' keyword:</h1>
    <ul>
      @foreach (Category category in @Model["categories"])
      {
        <li><a href="/categories/category.id">@category.name</a></li>
      }
    </ul>
    <h1>Recipes with '@Model["search-query"]' keyword:</h1>
    <ul>
      @foreach (Recipe recipe in @Model["recipes"])
      {
        <li><a href="/recipes/recipe.id">@recipe.name</a></li>
      }
    </ul>
  }
</div>
