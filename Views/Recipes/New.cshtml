@using Recipes.Models;

<div class="text-center">
    <h1 class="display-4">Recipes: New</h1>
    <form action="/recipes" method="post" >
      <label for="recipeName">Recipe Name:</label><br>
      <input type="text" name="recipeName"><br>
      <label for="recipeInstructions">Recipe Instructions:</label><br>
      <textarea rows="5" cols="80" type="text" name="recipeInstructions" autofocus="autofocus"></textarea><br>
      <label for="categoryId">Add this recipe to a category:</label><br>
      <select id='categoryId' name='categoryId' type='text'>
        <option value = 0>None</option>
        @foreach (var category in @Model)
        {
          <option value='@category.id'>@category.name</option>
        }
      </select><br><br>

      <button type="submit" class="btn btn-dark">Add Recipe</button>

    </form>
</div>
