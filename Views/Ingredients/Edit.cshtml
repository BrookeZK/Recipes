<div class="text-center">
    <h1 class="display-4">Edit @Model.name</h1>
    <form action="/ingredients/@Model.id" method="post" >
      <label for="ingredientName">Ingredient Name:</label><br>
      <input type="text" name="ingredientName" value="@Model.name"><br>
      <label for="ingredientDescription">Ingredient Description:</label><br>
      <textarea rows="5" cols="80" type="text" name="ingredientDescription" autofocus="autofocus">@Model.description</textarea><br>
      <button type="submit" class="btn btn-dark">Save Changes</button>
    </form>
</div>
